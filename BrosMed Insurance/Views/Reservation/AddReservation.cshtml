@{
}

@{
    ViewData["Title"] = "Wybierz Godzinę";
}

<h1>Wybierz Godzinę</h1>

<form asp-controller="YourController" asp-action="YourAction" method="post">
    <div class="form-group">
        <label for="godzina">Wybierz godzinę:</label>
        <select class="form-control" id="godzina" name="godzina">
            @foreach (var godzina in Model.Godzina)
            {
                <option value="@godzina.Id">@godzina.godzina</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Wybierz</button>
</form>